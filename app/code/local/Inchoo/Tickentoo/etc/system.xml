<?xml version="1.0"?>
<config>
    <tabs>
        <tickentoo module="inchoo_tickentoo">
            <label>Tickentoo</label>
            <sort_order>9001</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
        </tickentoo>
    </tabs>
    <sections>
        <tickentoo_config module="inchoo_tickentoo">
            <label>Tickentoo configuration</label>
            <tab>tickentoo</tab>
            <sort_order>9001</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <tickentoo_email_notifications translate="label">
                    <expanded>1</expanded>
                    <label>Email notifications</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <notify_admin_on_new_ticket translate="label">
                            <label>Send notification when ticket is created</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </notify_admin_on_new_ticket>
                        <notification_email_template translate="label">
                            <label>Notification Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </notification_email_template>
                        <!--
                        <notification_email_address translate="label">
                            <label>Send notifications to email</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-email</validate>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </notification_email_address>
                        -->
                    </fields>
                </tickentoo_email_notifications>
            </groups>
        </tickentoo_config>
    </sections>
</config>